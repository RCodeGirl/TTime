<div id="page-content">

    <div id="page-header" class="parallax" data-stellar-background-ratio="0.1" style="  background-image: url(Img/Articles/fon.jpg);">

        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <h3 style="color:black !important">Заказать перевод</h3>
                </div><!-- col -->
            </div><!-- row -->
        </div><!-- container -->

        <a class="go-to-section" href="#go-to-section"><i class="fa fa-angle-down"></i></a>

    </div><!-- page-header -->

    <div id="go-to-section"></div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">

                <div class="headline">

                    <h2>Заполните форму</h2>


                </div><!-- headline -->

            </div><!-- col -->
        </div><!-- row -->
    </div><!-- container -->

    <div class="container">
        <div class="row">
            <div class="col-sm-12">

                <form asp-action="Index" enctype="multipart/form-data"  style="margin-top:0;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <fieldset>

                        <div id="alert-area"></div>
                        <div class="form-group">
                            
                            <input class="col-xs-12" id="Name" type="text" name="name"placeholder="ФИО">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            
                            <input class="col-xs-12" id="email" type="email" name="email"placeholder="E-mail">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            
                            <input class="col-xs-12" id="LanguageOrig" type="text" name="LanguageOrig" placeholder="Язык оригинала">
                            <span asp-validation-for="LanguageOrig" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            
                            <input class="col-xs-12" id="LanguageTarget" type="text" name="LanguageTarget" placeholder="Язык перевода">
                            <span asp-validation-for="LanguageTarget" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            
                            <input class="col-xs-12" id="Phone" type="text" name="Phone" placeholder="Контактный телефон">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check" hidden="hidden">
                            <label class="form-check-label">
                                <input class="form-check-input a-align-lg-top-center" asp-for="IsNew" /> @Html.DisplayNameFor(model => model.IsNew)
                            </label>
                        </div>

                        <div class="form-group">
                            <input type="file" name="Document" asp-for="Document"  class="col-xs-12" placeholder="Загрузите документ">
                        </div>
                        <div class="form-group">
                            
                            <textarea asp-for="Comment" class="col-xs-12"placeholder="Комментарий" ></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Отправить Запрос" id="submit" class="btn btn-default" />
                        </div>


                       

                    </fieldset>
                </form>

            </div><!-- col -->
        </div><!-- row -->
    </div><!-- container -->

    <style>

        button, input[type="reset"], input[type="submit"], input[type="button"] {
            background: #f49014!important;
        }
        #page-header .go-to-section {
            background-color: #f6980c!important;
        }
    </style>


   
</div><!-- PAGE CONTENT -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
