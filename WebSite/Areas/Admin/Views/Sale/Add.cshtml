@model WebSite.Models.Content.SaleViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>PartnersViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group" hidden="hidden">
                <label asp-for="ImgPreview" class="control-label"></label>
                <input asp-for="ImgPreview" class="form-control" />
                <span asp-validation-for="ImgPreview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="Photo" asp-for="Photo" class="form-control" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsHidden" /> @Html.DisplayNameFor(model => model.IsHidden)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="button" asp-action="reviews">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
